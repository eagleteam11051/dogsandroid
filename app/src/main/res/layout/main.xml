<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.main.Main">
    <RelativeLayout
        android:id="@+id/layout_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:background="@color/colorPrimaryDark"
        android:gravity="bottom"
        >
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tName"
            android:layout_below="@+id/imgAvatar"
            android:text="Le Van Cong"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_20sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tId"
            android:text="ID: 16"
            android:textColor="@color/white"
            android:layout_alignStart="@+id/tName"
            android:layout_below="@+id/tName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tMoney"
            android:textColor="@color/white"
            android:text="Tài khoản: 4.000.000$"
            android:layout_alignStart="@+id/tName"
            android:layout_below="@+id/tId"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tAddress"
            android:textColor="@color/white"
            android:text="Địa chỉ: ICTU, Thái Nguyên"
            android:layout_alignStart="@+id/tName"
            android:layout_below="@+id/tMoney"
            android:layout_marginBottom="@dimen/_10sdp"
            />


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/layout_profile"
        android:layout_marginTop="@dimen/_1sdp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:id="@+id/layout_viec_dang_co"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4CAF50"
                android:layout_weight="1"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/imgDangCo"
                        android:src="@drawable/ic_logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Việc Đang Có"
                        android:textColor="@color/white"
                        android:layout_below="@+id/imgDangCo"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"/>
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_viec_dang_cho"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8BC34A"

                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/imgDaBook"
                        android:src="@drawable/ic_logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Việc Đang Chờ"
                        android:textColor="@color/white"
                        android:layout_below="@+id/imgDaBook"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:id="@+id/layout_viec_dang_lam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3F51B5"
                android:layout_weight="1"

                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/imgDangLam"
                        android:src="@drawable/ic_logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Việc Đang Làm"
                        android:textColor="@color/white"
                        android:layout_below="@+id/imgDangLam"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_viec_da_lam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDD835"
                android:layout_weight="1"

                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/imgDaLam"
                        android:src="@drawable/ic_logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Việc Đã Làm"
                        android:textColor="@color/white"
                        android:layout_below="@+id/imgDaLam"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>